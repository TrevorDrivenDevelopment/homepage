{
    "name": "homepage-backend",
    "version": "1.0.0",
    "description": "Backend API services for homepage applications",
    "main": "index.js",
    "type": "module",
    "packageManager": "bun@1.2.18",
    "scripts": {
        "build": "bun run build:bundle",
        "build:tsc": "tsc",
        "build:bundle": "node scripts/bundle.mjs",
        "build:bun": "bun build src/index.ts --outdir dist --target node",
        "deploy": "bun run cdk deploy",
        "deploy:cdk": "bun run cdk deploy",
        "destroy": "bun run cdk destroy",
        "local": "sam local start-api",
        "dev": "NODE_ENV=development bun --watch src/index.ts",
        "dev:local": "NODE_ENV=development bun --watch src/index.ts",
        "test": "bun test",
        "lint": "eslint src/**/*.ts",
        "type-check": "tsc --noEmit",
        "cdk": "cdk",
        "cdk:deploy": "cdk deploy",
        "cdk:destroy": "cdk destroy",
        "cdk:diff": "cdk diff",
        "cdk:synth": "cdk synth",
        "cdk:bootstrap": "cdk bootstrap"
    },
    "dependencies": {
        "@aws-sdk/client-ssm": "3.840.0",
        "aws-cdk-lib": "2.204.0",
        "axios": "1.10.0",
        "constructs": "10.4.2",
        "dotenv": "^17.0.1",
        "esbuild": "0.25.5",
        "source-map-support": "0.5.21"
    },
    "devDependencies": {
        "@aws-sdk/types": "3.840.0",
        "@eslint/js": "9.30.1",
        "@types/aws-lambda": "8.10.150",
        "@types/bun": "1.2.18",
        "@types/dotenv": "8.2.3",
        "@types/node": "24.0.10",
        "@typescript-eslint/eslint-plugin": "8.35.1",
        "@typescript-eslint/parser": "8.35.1",
        "aws-cdk": "2.1020.2",
        "eslint": "9.30.1",
        "globals": "16.3.0",
        "typescript": "5.8.3"
    }
}
